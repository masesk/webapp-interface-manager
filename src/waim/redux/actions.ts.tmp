import { ReactNode } from "react";
import {
  SHOW_WINDOW,
  CREATE_APP,
  HIDE_WINDOW,
  TOGGLE_SETTINGS,
  UPDATE_INDEX,
  MINIMIZE_WINDOW,
  UNMINIMIZE_WINDOW,
  UNMINIMIZE_UPDATE_INDEX,
  HIDE_WINDOW_ID,
  DELETE_APP,
  LOAD_APPS,
  RESET_DEFAULT,
  UPDATE_APP,
  SELECT_LAYOUT,
  ADD_APP_DOM,
  SELECT_LAYOUT_APP,
  REMOVE_ALL_LAYOUT,
  CREATE_NOTIFICATION,
  REMOVE_NOTIFICATION,
  ADD_LAYOUT,
  ADD_LAYOUT_INITIAL,
  TOGGLE_LAYOUT_EDIT,
  LAYOUT_SIZE_CHANGE
} from "./actionTypes";


export const hideWindow = (index: number) => ({
  type: HIDE_WINDOW,
  payload: { index }
})

export const showWindow = (appid: string) => ({
  type: SHOW_WINDOW,
  payload: { appid }
})

export const createApp = (appid: string, title: string, width: number, height: number, url: string, single: boolean, deletable: boolean, editable: boolean, imageUrl: boolean) => ({
  type: CREATE_APP,
  payload: { appid, title, width, height, url, single, deletable, editable, imageUrl }
})

export const updateApp = (appid: string, title: string, width: number, height: number, url: string, single: boolean, deletable: boolean, editable: boolean, imageUrl: boolean) => ({
  type: UPDATE_APP,
  payload: { appid, title, width, height, url, single, deletable, editable, imageUrl }
})


export const toggleShowing = (showing: boolean) => ({
  type: TOGGLE_SETTINGS,
  payload: { showing }
})


export const updateIndex = (viewid: number) => ({
  type: UPDATE_INDEX,
  payload: { viewid }
})

export const minimizeWindow = (index: number) => ({
  type: MINIMIZE_WINDOW,
  payload: { index }
})

export const unminimizeWindow = (index: number) => ({
  type: UNMINIMIZE_WINDOW,
  payload: { index }
})

export const uminimizeUpdateIndex = (viewid: number) => ({
  type: UNMINIMIZE_UPDATE_INDEX,
  payload: { viewid }
})

export const hideWindowId = (viewid: number) => ({
  type: HIDE_WINDOW_ID,
  payload: { viewid }
})


export const deleteApp = (appid: number) => ({
  type: DELETE_APP,
  payload: { appid }
})

export const loadApps = () => ({
  type: LOAD_APPS
})

export const resetDefault = () => ({
  type: RESET_DEFAULT
})


export const selectLayout = (layoutType: StringConstructor) => ({
  type: SELECT_LAYOUT,
  payload: {layoutType}
})


export const addAppDom = (appid: string, appDom: ReactNode) => ({
  type: ADD_APP_DOM,
  payload: {appid, appDom}
})


export const selectLayoutApp = (appid: string, indexPath: string[]) => ({
  type: SELECT_LAYOUT_APP,
  payload: {appid, indexPath}
})

export const removeAllLayout = () => ({
  type: REMOVE_ALL_LAYOUT
})

export const createNotification = (message: string, type: string, duration: number) => ({
  type: CREATE_NOTIFICATION,
  payload: {message, type, duration}
})

export const removeNotification = (id: number) => ({
  type: REMOVE_NOTIFICATION,
  payload: {id}
})


export const addLayout = (indexPath: number[], layoutType: string) => ({
  type: ADD_LAYOUT,
  payload: {indexPath, layoutType}
})

export const addInitialLayout = (layoutType: string) => ({
  type: ADD_LAYOUT_INITIAL,
  payload: {layoutType}
})

export const toggleLayoutEdit = () => ({
  type: TOGGLE_LAYOUT_EDIT
})

export const layoutSizeChange = (indexPath: number[], sizes: number[]) => ({
  type: LAYOUT_SIZE_CHANGE,
  payload: {indexPath, sizes}
})

